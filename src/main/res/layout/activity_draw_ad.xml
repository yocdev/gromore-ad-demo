<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="自渲染draw"
            android:textColor="@color/ttt_color_333" />

        <RadioButton
            android:id="@+id/radio_draw_express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模板draw"
            android:textColor="@color/ttt_color_333" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_ad_unit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textColor="#333333"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_load_draw"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="加载draw广告"
        android:textColor="#3399cc"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bt_show_draw"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="展示draw广告"
        android:textColor="#3399cc"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bt_load_show_draw"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="加载并展示draw广告"
        android:textColor="#3399cc"
        android:textSize="14sp" />

    <FrameLayout
        android:id="@+id/draw_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="#FFF"
        android:visibility="visible" />
</LinearLayout>
